.content {
  width: 100%;
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.content .title {
  font-size: 46rpx;
  font-weight: 400;
}
.content .describe {
  text-align: center;
}
.content .company-card {
  border: 2rpx solid #c8c9cc;
  border-radius: 60rpx;
  width: 80%;
  padding: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  left: calc(10%);
  box-shadow: 4rpx 4rpx 4rpx #f4f4f5;
}
.content .company-card .describe {
  padding: 0 20rpx;
  text-align: left;
}
.content .white {
  height: 180rpx;
}
.bottom-menu {
  width: 100%;
  position: fixed;
  padding: 0;
  bottom: 0;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.bottom-menu .icon {
  width: 80rpx;
}
.bottom-menu .send-btn-content {
  text-align: right;
  padding-left: 220rpx;
}
.resume {
  padding: 20rpx;
}
.resume .resume-list {
  border: 1px solid #f4f4f5;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.resume .resume-list .resume-title {
  position: relative;
  left: 30%;
}
.resume .resume-list .sheet {
  position: relative;
  left: 55%;
}

