.head-content {
  width: 100%;
  text-align: center;
}
.head-content .company-card {
  width: 90%;
  height: 260rpx;
  border: 1px solid #c8c9cc;
  border-radius: 60rpx;
  box-shadow: 4rpx 4rpx 4rpx #f4f4f5;
  position: relative;
  left: calc(50% - 330rpx);
  padding: 20rpx;
}
.head-content .company-card .avatar {
  position: relative;
  top: 60rpx;
  left: 30rpx;
}
.head-content .company-card .company-info {
  position: relative;
  top: 60rpx;
}
.info {
  padding: 20rpx;
}
.info .company-describe {
  padding: 20rpx;
  text-indent: 2em;
}
.product-list {
  padding: 20rpx;
  width: 100%;
  height: 100%;
}

